@model IEnumerable<MVCCrud.Models.MvcCalisanlarModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="@Url.Action("Ekle","Calisanlar")" class="btn btn-danger"><i class="fa fa-plus-square"></i> Çalışan Ekle</a>
</p>
<table class="table table-striped">
    <thead class="table-danger">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdSoyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pozisyon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maas)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.AdSoyad)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Pozisyon)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Yas)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Maas)
    </td>
    <td>
        <a href="@Url.Action("Ekle","Calisanlar",new { id=item.CalisanID})" class="btn btn-default"><i class="fa fa-pencil-square"></i> Edit</a>
        <a onclick="Sil(@item.CalisanID)"class="btn btn-default"><i class="fa fa-trash"></i> Sil</a>
    </td>
</tr>
}

</table>

@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage != '')
                alertify.success(successMessage);

        });

        function Sil(id) {
            alertify.confirm('silme işlemi', 'Kaydı silmek istiyor musunuz ?', function () {
                window.location.href = '@Url.Action("Sil","Calisanlar")/' + id;
            }, null);
        }

    </script>
    
    }

